<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="0dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/service_list_title_background"
        android:gravity="center"
        android:text="@string/activity_service_list_title"
        android:textColor="@color/service_list_title_text"
        android:textSize="@dimen/service_list_text_size_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/device_connect_service_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
        android:id="@+id/device_connect_service_list_button_new_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/service_list_button_blue"
        android:textColor="#FFFFFF"
        android:text="@string/activity_service_list_button_service_registration"
        android:layout_margin="10sp" />
</LinearLayout>
